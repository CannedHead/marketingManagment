extend layout
block content
    .container
        ol.breadcrumb
            li
                a(href="/admin") Distribuidores
             li.active Editar
        .row
            form(action="/admin/editar-distribuidor" method="post")
                .col-md-12
                    .col-md-6   
                        .form-group
                            label NIT
                            input.form-control(name="id", type="hidden", value="#{dist._id}")
                            input.form-control(type="text" name="nit" value="#{dist.nit}" required disabled)                       
                        .form-group
                            label Nombre 
                            input.form-control(type="text" name="fname" value="#{dist.first}" required)  
                        .form-group
                            label Apellido
                            input.form-control(type="text" name="lname" value="#{dist.last}" required) 
                        .form-group
                            label Email
                            input.form-control(type="email" name="email" value="#{dist.email}" required) 
                    .col-md-6 
                        .form-group
                            label Departamento
                            select.form-control(name="departamento" required)

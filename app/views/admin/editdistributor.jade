                                option(value="Cordoba") Cordoba
                                option(value="Cundinamarca") Cundinamarca
                                option(value="Guania") Guania
                                option(value="Guaviare") Guaviare
                                option(value="Huila") Huila
                                option(value="Guajira") La Guajira
